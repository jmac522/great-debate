
<div class="topic-index-container small-12 columns">
  <h1 style="text-align: center">All Topics</h1>
  <div class="topic-container panel row" data-equalizer>
    <% @topics.each do |topic| %>
        <div class="topic-tile small-3 columns end" data-equalizer-watch>
          <div class="panel">
            <div><a href="<%= topic_path(topic) %>"><span class="tile-link"></span></a></div>
            <div class="title small-12 columns">
              <h2><%= topic.title %></h2>
            </div>
            <div class="category-img small-12 columns">
              <%= image_tag(topic.category_img) %>
            </div>
          </div>
        </div>
    <% end %>
    <div class="row topic-index-bottom">
      <div  class="small-12 columns paginate">
        <%= paginate @topics %>
        <%= page_entries_info @topics %>
      </div>
      <div class="small-12 columns"<h2><%= link_to "Add Topic", new_topic_path %></h2></div>
    </div>
  </div>
</div>
