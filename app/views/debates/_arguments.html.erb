<div class="argument-content">
  <div class="argument-container panel">
    <div class="flash-debate">
      <%= render 'shared/flash' %>
    </div>
    <div class="small-5 columns side-arguments">
        <% @side_1_arguments.each_with_index do |argument, round| %>
          <div class="argument panel">
            <div><h3>Round <%= round + 1 %></h3></div>
            <div class="arg-body"><%= argument.body %></div>
            <div class="arg-applauds">Applauds:<%= argument.score %></div>
          </div>
        <% end %>
    </div>
    <div class="versus small-2 columns">

    </div>
    <div class="small-5 columns side-arguments">
        <% @side_2_arguments.each_with_index do |argument, round| %>
          <div class="argument panel">
            <div><h3>Round <%= round + 1 %></h3></div>
            <div class="arg-body"><%= argument.body %></div>
            <div class="arg-applauds">Applauds:<%= argument.score %></div>
          </div>
        <% end %>
    </div>
  </div>
  <div class="small-12 columns">
  <h2><%= link_to "Back to #{@debate.topic.title}", topic_path(@debate.topic) %><h2>
  </div>
</div>
